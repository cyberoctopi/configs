escape C-f
startup_message off

set winname class
defborder 0
defpadding 0 0 0 0
defbarpadding 0 0 
#set font -nil-profont-medium-r-normal--0-0-72-72-c-0-iso8859-1
set font 'Terminus-10'
set border 0
set bgcolor grey10
set fgcolor #E20014
gravity se


#exec xsetroot -cursor_name left_ptr
exec unclutter -idle 0 -root
exec urxvt -name URxvt.india
hsplit
focusright
exec urxvt -name URxvt.india
focusright
exec urxvt -name URxvt.india
vsplit
hsplit
exec urxvt -name URxvt.india
vsplit
focusdown
exec urxvt -name URxvt.india
focusright
exec xterm
exec urxvt -name URxvt.india 
focusdown 
exec urxvt -name URxvt.india
focusdown
exec urxvt -name URxvt.india -e top

bind space exec ratpoison -c "echo $(mpnp)"
bind dead_acute exec rpws init 2 -ak
bind = exec ratpoison -c "setenv fs1 $(ratpoison -c 'fdump')"
bind 0 exec ratpoison -c "frestore $(ratpoison -c 'getenv fs1')"
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright
bind H rpwsp
bind L rpwsn
bind c exec urxvtc -name URxvt.india
bind e exec sh dmenushit
bind o exec perl $HOME/bin/expose

