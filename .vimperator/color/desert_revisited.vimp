" ==Vimperator_Color_Scheme==
" name: Desert Revisited
" ==Desert_Revisited_Color_Scheme==

hi Normal    background: #1c1c1c; color: #afafaf; font-size: 9pt; font-family: terminus; 
hi CmdLine   background: #1c1c1c; color: #FF4500; font-size: 10pt; font-family: terminus; font-weight: bold; padding:  0px 3px;

hi CompGroup          background: #1c1c1c; color: #afafaf; 
hi CompTitle          background: #1c1c1c; color: #afafaf; font-weight: bold;
hi CompItem           background: #1c1c1c; color: #afafaf; padding: 0px 3px;
hi CompItem[selected] background: #1c1c1c; color: #FF4500; font-weight: bold; 
hi CompDesc           background: #1c1c1c; color: #afafaf; 
hi CompDesc[selected] background: #FF4500; color: #afafaf; 
hi CompMsg            background: #1c1c1c; color: #afafaf; 

hi Gradient           background: #1c1c1c;
hi GradientLeft       background: #1c1c1c;
hi GradientRight      background: #1c1c1c;

hi ErrorMsg           background: #ff6565; color: #ffffff;
hi Filter             color: #FF8B00; font-weight: bold; 

hi StatusLine         font-family: terminus; font-size: 10pt; font-weight: bold; color: #fff; background: #1c1c1c;
hi StatusLineBroken   font-family: terminus; font-size: 10pt; font-weight: bold; color: #fff; background: #1c1c1c;
hi StatusLineSecure   font-family: terminus; font-size: 10pt; font-weight: bold; color: #fff; background: #1c1c1c;

hi Hint               font-family: terminus; font-size: 12pt; font-weight: bold; color: #FF4500; background-color: #000; padding: 0px 1px; border: 1px solid #1c1c1c;

hi Title              font-size: 12pt; color: #1c1c1c; background: #afafaf;

style -name statusbar chrome://* <<EOM
#status-bar statusbarpanel { padding: 0 1px !important; }
statusbarpanel > * { margin: 0 !important; padding: 0 2px 0 0 !important; }
EOM
